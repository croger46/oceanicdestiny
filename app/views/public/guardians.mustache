{{>head}}
{{>menu}}

{{! start of content }}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Guardian Index</h1>
      <hr />
      <p class="lead">
        Players we are currently tracking: {{guardianCount}}
      </p>
    </div>
  </div>

  <table class="table table-hover dataTable" id="dataTable">
    <thead>
      <tr>
        <th style="width: 32px; ">&nbsp;</th>
        <th><span rel="tooltip" title="Click to sort by Player Name">Player Name</span></th>
        <th><span rel="tooltip" title="Click to sort by Level">Level</span></th>
        <th><span rel="tooltip" title="Click to sort by Class">Class</span></th>
        <th><span rel="tooltip" title="Click to sort by Time Played">Time Played</span></th>
      </tr>
    </thead>
    <tbody>
      {{#guardians}}
      <tr>
        <td><img src="{{emblem}}" style="margin: 0px 15px; width: 32px; height: 32px; "></td>
        <td>
          <h4 style="margin-top: 0px; ">{{owner}}</h4>
          [ <a href="https://www.bungie.net/en/Legend/{{membershipType}}/{{membershipId}}/{{characterId}}">Guardian</a> ] &nbsp;
          [ <a href="https://www.bungie.net/en/Legend/{{membershipType}}/{{membershipId}}/{{characterId}}#gear">Gear</a> ]
        </td>
        <td>{{level}}{{#bonus}} (+{{.}}){{/bonus}}</td>
        <td>{{class}}</td>
        <td>{{minutesPlayedTotal}} minutes</td>
      </tr>
      {{/guardians}}
    </tbody>
  </table>
</div>

{{! end of content }}

{{>foot}}