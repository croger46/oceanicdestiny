<!-- Modal -->
<div class="modal fade" id="createLFG" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form class="form-horizontal" method="POST" action="/">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Create LFG Notice</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="level" class="col-md-3 control-label">Your Level</label>
            <div class="col-md-2">
              <input type="number" class="form-control" id="level" name="level" placeholder="##" maxlength="2" min="1">
            </div>
          </div>
          <div class="form-group">
            <label for="level" class="col-md-3 control-label">Your Class</label>
            <div class="col-md-5">
              <select name="class" class="form-control">
                <option value="Hunter">Hunter</option>
                <option value="Titan">Titan</option>
                <option value="Warlock">Warlock</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="type" class="col-md-3 control-label">Mission Type</label>
            <div class="col-md-3">
              <select name="type" class="form-control">
                <option value="Raid">Raid</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="activity" class="col-md-3 control-label">Mission Name</label>
            <div class="col-md-9">
              <select name="activity" class="form-control">
                <option value="Vault of Glass">Vault of Glass</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="mode" class="col-md-3 control-label">Mission Mode</label>
            <div class="col-md-3">
              <select name="mode" class="form-control">
                <option value="Normal">Normal</option>
                <option value="Hard">Hard</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="headset" class="col-md-3 control-label">Mic/Headset?</label>
            <div class="col-md-3">
              <select name="headset" class="form-control">
                <option value="1">Yes</option>
                <option value="0">No</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="gamerid" class="col-md-3 control-label">Gamer ID</label>
            <div class="col-md-9">
              <input type="text" class="form-control" id="gamerid" name="gamerid" placeholder="Gamer Name, or Gamer Tag">
            </div>
          </div>
          <div class="form-group">
            <label for="platform" class="col-md-3 control-label">Platform</label>
            <div class="col-md-4">
              <select name="platform" class="form-control">
                <option value="PS3">PS3</option>
                <option value="PS4">PS4</option>
                <option value="Xbox 360">Xbox 360</option>
                <option value="Xbox One">Xbox One</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="note" class="col-md-3 control-label">Additional Notes<br><small class="text-muted">max 200 chars</small></label>
            <div class="col-md-9">
              <input type="text" class="form-control" id="note" name="note" placeholder="Any additional note to make about this LFG/LFM" maxlength="200">
            </div>
          </div>
          <div class="form-group">
            <label for="level" class="col-md-3 control-label">Anti-Spam</label>
            <div class="col-md-9">
              {{{recaptcha}}}
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="postType" value="createLFG" />
          <button type="submit" class="btn btn-success">Create LFG Notice</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>
